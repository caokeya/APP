<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/prot_eye_green">

    <RelativeLayout
        android:id="@+id/relative_header"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/action_bar_bg">
        <ImageButton
            android:id="@+id/ibtn_back"
            android:layout_width="@dimen/ibtn_back_width"
            android:layout_height="match_parent"
            android:src="@drawable/back"
            android:scaleType="centerInside"
            android:layout_alignParentLeft="true"
            android:background="@drawable/ibtn_back_bg"
            android:contentDescription="back"/>

        <View
            android:id="@+id/v_spliteLine"
            android:layout_width="0.5dp"
            android:layout_height="20dp"
            android:background="@color/white"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/ibtn_back"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="手上牌"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_l"
            android:gravity="center"
            android:layout_centerInParent="true"/>

        <ImageButton
            android:id="@+id/ibtn_moreFun"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:src="@drawable/more_fun"
            android:scaleType="centerInside"
            android:layout_alignParentRight="true"
            android:background="@drawable/ibtn_more_fun_bg"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <LinearLayout
            android:id="@+id/linear_north"
            android:layout_width="match_parent"
            android:layout_height="@dimen/player_height_half"
            android:gravity="center"
            android:orientation="horizontal"></LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_below="@id/linear_north"
            android:layout_centerHorizontal="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_bankerPositionNorth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_l"
                android:textColor="@color/red"
                android:textStyle="bold"
                android:text="庄"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/tv_myPositionNorth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textSize="@dimen/text_size_l"
                android:textColor="@color/blue"
                android:textStyle="bold"
                android:text="我"
                android:visibility="gone" />
            <ImageView
                android:id="@+id/iv_redDiceNorth"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="5dp"
                android:visibility="gone"/>
            <ImageView
                android:id="@+id/iv_blueDiceNorth"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="5dp"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_south"
            android:layout_width="match_parent"
            android:layout_height="@dimen/player_height_half"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:gravity="center"
            android:orientation="horizontal"></LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_above="@id/linear_south"
            android:layout_centerHorizontal="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_bankerPositionSouth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_l"
                android:textColor="@color/red"
                android:textStyle="bold"
                android:text="庄"
                android:visibility="gone" />
            <TextView
                android:id="@+id/tv_myPositionSouth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textSize="@dimen/text_size_l"
                android:textColor="@color/blue"
                android:textStyle="bold"
                android:text="我"
                android:visibility="gone" />
            <ImageView
                android:id="@+id/iv_redDiceSouth"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="5dp"
                android:visibility="gone"/>
            <ImageView
                android:id="@+id/iv_blueDiceSouth"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="5dp"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_west"
            android:layout_width="@dimen/player_height_half"
            android:layout_height="match_parent"
            android:layout_above="@id/linear_south"
            android:layout_below="@id/linear_north"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:orientation="vertical"></LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/linear_west"
            android:layout_centerVertical="true"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_bankerPositionWest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_l"
                android:textColor="@color/red"
                android:textStyle="bold"
                android:text="庄"
                android:visibility="gone" />
            <TextView
                android:id="@+id/tv_myPositionWest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textSize="@dimen/text_size_l"
                android:textColor="@color/blue"
                android:textStyle="bold"
                android:text="我"
                android:visibility="gone" />
            <ImageView
                android:id="@+id/iv_redDiceWest"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="5dp"
                android:visibility="gone"/>
            <ImageView
                android:id="@+id/iv_blueDiceWest"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="5dp"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_east"
            android:layout_width="@dimen/player_height_half"
            android:layout_height="match_parent"
            android:layout_above="@id/linear_south"
            android:layout_alignParentRight="true"
            android:layout_below="@id/linear_north"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:orientation="vertical"></LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@id/linear_east"
            android:layout_centerVertical="true"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_bankerPositionEast"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_l"
                android:textColor="@color/red"
                android:textStyle="bold"
                android:text="庄"
                android:visibility="gone" />
            <TextView
                android:id="@+id/tv_myPositionEast"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textSize="@dimen/text_size_l"
                android:textColor="@color/blue"
                android:textStyle="bold"
                android:text="我"
                android:visibility="gone" />
            <ImageView
                android:id="@+id/iv_redDiceEast"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="5dp"
                android:visibility="gone"/>
            <ImageView
                android:id="@+id/iv_blueDiceEast"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="5dp"
                android:visibility="gone" />
        </LinearLayout>

        <ImageView
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_centerInParent="true"
            android:background="@drawable/direction"/>
    </RelativeLayout>
</LinearLayout>
