<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <RelativeLayout
        android:id="@+id/relative_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/action_bar_height"
        android:layout_alignParentTop="true"
        android:background="@color/action_bar_bg">
        <ImageButton
            android:id="@+id/ibtn_back"
            android:layout_width="@dimen/ibtn_back_width"
            android:layout_height="match_parent"
            android:src="@drawable/back"
            android:background="@drawable/ibtn_search_bg" />

        <View
            android:id="@+id/v_spliteLine"
            android:layout_width="0.5dp"
            android:layout_height="20dp"
            android:background="@color/white"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/ibtn_back"/>

        <TextView
            android:id="@+id/btn_save"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="学习测试"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_l"
            android:layout_centerInParent="true"
            android:gravity="center"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="方位学习"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/btn_directionStudyEast"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="东"/>
                    <Button
                        android:id="@+id/btn_directionStudySouth"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="南"/>
                    <Button
                        android:id="@+id/btn_directionStudyWest"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="西"/>
                    <Button
                        android:id="@+id/btn_directionStudyNorth"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="北"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="打色按键学习"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/btn_useDiceEast"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="东"/>
                    <Button
                        android:id="@+id/btn_useDiceSouth"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="南"/>
                    <Button
                        android:id="@+id/btn_useDiceWest"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="西"/>
                    <Button
                        android:id="@+id/btn_useDiceNorth"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="北"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/btn_upDown1"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="升降1"/>
                    <Button
                        android:id="@+id/btn_upDown2"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="升降2"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btn_checkMajiang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="麻将牌检测"/>
                <ImageView
                    android:id="@+id/iv_checkMajiang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="红："/>
                <wzp.project.majiang.widget.ListOptionButton
                    android:id="@+id/btn_redDice"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/btn_option_height"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:gravity="center"
                    android:drawableRight="@drawable/down"
                    android:drawablePadding="5dp"
                    android:textSize="@dimen/text_size_m"
                    android:textColor="@color/black"
                    android:background="@drawable/btn_options_bg"
                    app:options="@array/dice_arr">
                </wzp.project.majiang.widget.ListOptionButton>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="白："/>
                <wzp.project.majiang.widget.ListOptionButton
                    android:id="@+id/btn_whiteDice"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/btn_option_height"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:gravity="center"
                    android:drawableRight="@drawable/down"
                    android:drawablePadding="5dp"
                    android:textSize="@dimen/text_size_m"
                    android:textColor="@color/black"
                    android:background="@drawable/btn_options_bg"
                    app:options="@array/dice_arr">
                </wzp.project.majiang.widget.ListOptionButton>
                <Button
                    android:id="@+id/btn_useDice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="打色"/>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/btn_remoteControlStudy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="遥控器学习"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btn_channelTest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="通道测试"/>
                <TextView
                    android:id="@+id/tv_channelTestEast"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="东"
                    android:gravity="center"
                    android:drawableBottom="@drawable/grey_dot"/>
                <TextView
                    android:id="@+id/tv_channelTestSouth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="南"
                    android:gravity="center"
                    android:drawableBottom="@drawable/grey_dot"/>
                <TextView
                    android:id="@+id/tv_channelTestWest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="西"
                    android:gravity="center"
                    android:drawableBottom="@drawable/grey_dot"/>
                <TextView
                    android:id="@+id/tv_channelTestNorth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="北"
                    android:gravity="center"
                    android:drawableBottom="@drawable/grey_dot"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="通道号"/>
                    <TextView
                        android:id="@+id/tv_channelNo"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text=""/>
                </LinearLayout>
                <ImageView
                    android:id="@+id/iv_channelTestMajiang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="刹车时间："/>
                    <wzp.project.majiang.widget.AddSubWidget
                        android:id="@+id/as_brakeTime"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/btn_option_height"
                        android:layout_gravity="center"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:gravity="center"
                        android:drawableRight="@drawable/down"
                        android:drawablePadding="5dp"
                        android:textSize="@dimen/text_size_m"
                        android:textColor="@color/black"
                        app:maxVal="99"
                        app:initVal="0"/>
                    <Button
                        android:id="@+id/btn_setBrakeTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="设置"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="打色延时："/>
                    <wzp.project.majiang.widget.AddSubWidget
                        android:id="@+id/as_useDiceDelay"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/btn_option_height"
                        android:layout_gravity="center"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:gravity="center"
                        android:drawableRight="@drawable/down"
                        android:drawablePadding="5dp"
                        android:textSize="@dimen/text_size_m"
                        android:textColor="@color/black"
                        app:maxVal="99"
                        app:initVal="0"/>
                    <Button
                        android:id="@+id/btn_setUseDiceDelay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="设置"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>